function searchByAN() {
const an =
Number (document.getElementById("atomicNumber").value);
const element elements.find(e => e.an === an);
displayResult(element);
}
function searchBySymbol() {
const symbol document.getElementById("symbol").value.trim();
const element elements.find(e => e.symbol.toLowerCase() ===
symbol.toLowerCase());
displayResult(element);
function displayResult(element) {
document.getElementById("result").innerHTML element
? 'Element: ${element.name) (Atomic Number:
$(element.an), Symbol: $(element.symbol), Atomic Mass: $(element.am})' 
: "Element not found.";
}
